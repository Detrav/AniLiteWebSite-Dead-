@model IEnumerable<AniLiteWebSite.Models.ProductSimple>

@{
    ViewBag.Title = "База данных";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-2">
        Фильтры базы:
    </div>
    <div class="col-md-2">

    </div>
</div>
<hr />
<table class="table table-striped">
    <tr>
        <td width="81" class="table-td-middle">Обложка</td>
        <td>Название</td>
        <td style="min-width:160px;" class="table-td-middle">Инструменты</td>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td width="81" class="table-td-middle">
                <a href="@Url.Action("Details", new { id = @item.id })">
                    <img src="@item.AvatarURI64" style="max-height:64px;max-width:64px" />
                </a>
            </td>
            <td> <b>[@item.Year]  @item.Names.First();</b>
            @foreach( var it in item.Names.Skip(1))
            {
                @(","+it)
            }
            </td>

            <td class="table-td-middle">
                <div class="row">
                    <div class="col-md-3">
                        <a href="@item.FromURI">Внешний источник</a>
                    </div>
                    <div class="col-md-3">
                        @if(!item.Viewed)
                        { 
                        <font size="5" color="red"> @item.NumOfEpisode </font>
                        }
                        else
                        {
                            if (item.ViewedEnd)
                            {
                                <font size="5" color="green"> @item.NumCurrent/@item.NumOfEpisode </font>
                            }
                            else
                            {
                                <font size="5" color="blue"> @item.NumCurrent/@item.NumOfEpisode </font>
                            }

                        }
                    </div>
                    <div class="col-md-6">
                        <a href="#" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-minus"></span></a>
                        <a href="@Url.Action("Details", new { id = @item.id })" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-info-sign"></span></a>
                        <a href="#" class="btn btn-success btn-lg"> <span class="glyphicon glyphicon-plus"></span></a>
                    </div>
                </div>
            </td>

        </tr>
    }
</table>