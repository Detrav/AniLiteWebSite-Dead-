@model AniLiteWebSite.Models.ProductDetails

@{
    ViewBag.Title = "Редактирование продукта";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Product", new { Id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Id, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.Label(Model.Id.ToString(), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Отображаемое название" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Names, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Names,4,1, new { @class = "form-control", placeholder = "Название на других языках, каждое название — новая строка" })
            @Html.ValidationMessageFor(m => m.Names)
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>