@using AniLiteWebSite.Core.HtmlHelper
@model AniLiteWebSite.Models.ProductDetails

@{
    ViewBag.Title = "Редактирование продукта";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Product", new { Id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.BSFromGroupLabel(m => m.Id,10)
    @Html.BSFromGroupForTextBox(m => m.Name,10, "Отображаемое название")
    
    <div class="form-group">
        @Html.LabelFor(m => m.Names, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            
        </div>
        @for (int i = 0; i < Model.Names.Count;i++ )
        { 
        <div class=" col-sm-offset-2 col-sm-10">
        @Html.TextBox(String
             .Format("Names[{0}]", i),
             Model.Names[i],
                      new { @class = "form-control", placeholder = "На других языках" })    
        </div>
        }
    </div>
    
    @Html.BSFromGroupSubmitSuccess("SubmitButton",10,"Сохранить")
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>