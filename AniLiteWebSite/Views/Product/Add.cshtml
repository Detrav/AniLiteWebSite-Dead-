@model AniLiteWebSite.Core.DataBase.Model.Product

@{
    ViewBag.Title = "Добавление продукта";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm("Add", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Отображаемое название" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.FullName,4,1, new { @class = "form-control", placeholder = "Название на других языках" })
            @Html.ValidationMessageFor(m => m.FullName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, 4, 1, new { @class = "form-control", placeholder = "Короткое описание" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Begin, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.TextBoxFor(m => m.Begin, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Begin)
        </div>
        @Html.LabelFor(m => m.End, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.TextBoxFor(m => m.End, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.End)
        </div>
        @Html.LabelFor(m => m.Ended, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.CheckBoxFor(m => m.Ended, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ended)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberofEpisode, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-1">
            @Html.TextBoxFor(m => m.NumberofEpisode, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NumberofEpisode)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AvatarURI, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AvatarURI, new { @class = "form-control", placeholder = "Ссылка на постер, любого размера" })
            @Html.ValidationMessageFor(m => m.AvatarURI)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromURI, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FromURI, new { @class = "form-control", placeholder = "Ссылка на информацию, хорошо бы на world-art" })
            @Html.ValidationMessageFor(m => m.FromURI)
        </div>
    </div>
    <div class="form-group">
        <input type="submit" name="AddButton" value="Добавить" class="col-sm-offset-2 col-sm-10 btn btn-success" />
    </div>
}
