@model AniLiteWebSite.Core.DataBase.Model.Product

@{
    ViewBag.Title = "Добавление продукта";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm("Add", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Отображаемое название" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, 4, 1, new { @class = "form-control", placeholder = "Короткое описание" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AvatarURI, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AvatarURI, new { @class = "form-control", placeholder = "Ссылка на постер, любого размера" })
            @Html.ValidationMessageFor(m => m.AvatarURI)
        </div>
    </div>
    <div class="form-group">
        <input type="submit" name="AddButton" value="Добавить" class="col-sm-offset-2 col-sm-10 btn btn-success" />
    </div>
}
